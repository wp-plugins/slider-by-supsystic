</div>

<script type="text/javascript">
    $ = jQuery.noConflict();

    $(document).ready(function() {

        showDescriptionField($('#find-web'), $('#find-web-description'));
        showDescriptionField($('#find-other'), $('#find-other-description'));

    });

    function showDescriptionField($checkbox, $field) {
        $checkbox.change(function() {
            jQuery('.r-description').hide();
            $field.toggle(this.checked);
        });
    }
</script>
